{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"files": {
		"include": ["**/*.ts", "**/*.tsx", "**/*.scss"],
		"ignore": ["node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas":"none",
			"arrowParentheses": "asNeeded",
			"lineWidth": 120
		}
	}
}
